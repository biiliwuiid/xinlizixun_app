<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_userinfo_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_white_color"
    android:gravity="center|left"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/order_userinfo_item_icon"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:paddingRight="15dp"
        android:src="@mipmap/common_checkbox_unselect_icon" />

    <TextView
        android:id="@+id/order_userinfo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人成长"
        android:textColor="#ff333333"
        android:textSize="14sp" />
</LinearLayout>
