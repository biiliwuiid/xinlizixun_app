<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_pay_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/pay_dialog_background_share"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/select_pay_dialog_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:src="@mipmap/common_close_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#ff333333"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/select_pay_dialog_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="580"
                android:textColor="#ff333333"
                android:textSize="35sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/global_line_color2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="支付方式"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/select_pay_dialog_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/pay_dialog_balance_icon" />

            <TextView
                android:id="@+id/select_pay_dialog_balance_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="零钱"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/select_pay_dialog_balance_status_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/common_radio_select_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_pay_dialog_alipay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/pay_dialog_alipay_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付宝"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/select_pay_dialog_alipay_status_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/common_radio_unselect_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_pay_dialog_wechat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/pay_dialog_wechat_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微信"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/select_pay_dialog_wechat_status_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/common_radio_unselect_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/global_line_color2" />

        <TextView
            android:id="@+id/select_pay_dialog_pay_btn"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_theme_background_share"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
