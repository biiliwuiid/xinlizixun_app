<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupon_info_item_root"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/global_white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@mipmap/coupon_background_icon"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupon_info_item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="23dp"
                android:text="心理咨询专用红包"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/coupon_info_item_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="有效期至2020-12-30"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_info_item_symbol_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#ffed4b4b"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/coupon_info_item_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0dp"
                    android:text="20"
                    android:textColor="#ffed4b4b"
                    android:textSize="36sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/coupon_info_item_tiaojian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满100可用"
                android:textColor="#ff999999"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/coupon_info_item_status_img"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="116dp"
        android:src="@mipmap/coupon_item_status_icon"
        android:visibility="gone" />
</RelativeLayout>
