            android:gravity="center"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_week_five_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_week_six_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_week_seven_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_time_activity_month_one_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#ff9ddcaf"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/order_time_activity_month_two_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#ff9ddcaf"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_three_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#ff9ddcaf"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_month_four_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#ff9ddcaf"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_month_five_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#ff9ddcaf"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_month_six_text"
