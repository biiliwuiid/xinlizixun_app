            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_time_activity_day_seven_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp" />

    </LinearLayout>

    <GridView
        android:id="@+id/order_time_activity_gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:horizontalSpacing="15dp"
        android:numColumns="7"
        android:scrollbars="none"
        android:verticalSpacing="15dp" />

    <LinearLayout
        android:id="@+id/order_time_activity_tip_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/order_time_choose_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="请选择时间"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_time_activity_next_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/order_time_choose_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_time_activity_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1月02日 10:30-11:20"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_time_activity_way_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频咨询"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@color/global_white_color" />

        <TextView
            android:id="@+id/order_time_activity_next_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
