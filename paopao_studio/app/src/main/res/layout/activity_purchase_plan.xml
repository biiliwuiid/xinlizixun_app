<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purchase_plan_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_white_color"
    android:orientation="vertical"
    tools:context="module.main.center.PurchasePlanActivity">

    <ui.title.ToolBarTitleView
        android:id="@+id/purchase_plan_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defult_style="TRAN_BLCAK"
        app:left_button_drawable="@mipmap/common_black_back_icon"
        app:title_text="客户套餐信息" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/purchase_plan_activity_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_background_color"
        app:srlDragRate="1"
        app:srlHeaderHeight="80dp"
        app:srlHeaderMaxDragRate="1.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/common_empty_layout" />

            <ListView
                android:id="@+id/purchase_plan_activity_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:divider="@null" />
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
