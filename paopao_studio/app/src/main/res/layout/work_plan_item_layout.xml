<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/work_plan_item_item_root"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:id="@+id/work_plan_item_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/work_plan_item_item_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00-7:50"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/work_plan_item_item_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已预约"
            android:textColor="#ff666666"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/work_plan_item_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#999999" />

    <View
        android:id="@+id/work_plan_item_item_right_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#999999" />
</RelativeLayout>
