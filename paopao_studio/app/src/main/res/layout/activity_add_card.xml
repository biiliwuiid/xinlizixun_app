<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_card_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="module.balance.AddCardActivity">

    <ui.title.ToolBarTitleView
        android:id="@+id/add_card_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defult_style="TRAN_BLCAK"
        app:left_button_drawable="@mipmap/common_black_back_icon"
        app:title_text="绑定提现账户" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/global_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/order_buy_pay_way_alipay_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="支付宝"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="支付宝账号："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_card_activity_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_gary_border_bold_background_share"
        android:hint="请输入支付宝账号"
        android:maxLength="50"
        android:paddingLeft="15dp"
        android:textColor="#333333"
        android:textColorHint="#ff999999"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="姓名："
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_card_activity_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_gary_border_bold_background_share"
        android:hint="请输入姓名"
        android:maxLength="50"
        android:paddingLeft="15dp"
        android:textColor="#333333"
        android:textColorHint="#ff999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/add_card_activity_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_theme_background_share"
        android:gravity="center"
        android:text="确认"
        android:textColor="#ffffffff"
        android:textSize="15sp" />

</LinearLayout>
