<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/counsel_question_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:background="@mipmap/counsel_question_background_icon"
        android:gravity="center">

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:background="@mipmap/counsel_question_background2_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/counsel_question_item_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingTop="8.5dp"
                android:text="我需要心理咨询吗"
                android:textColor="#ff536553"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/counsel_question_item_icon_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
